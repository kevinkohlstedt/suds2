<div class="page-header">
  <h3><%= @brewery.brewery_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Brewery name</dt>
      <dd><%= @brewery.brewery_name %></dd>
      <dt>Brewery location</dt>
      <dd><%= @brewery.brewery_location %></dd>
      <dt>Brewery logo</dt>
      <dd><img src="<%= @brewery.image_url %>" height="100px"/></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/breweries" class="btn btn-primary">
        Back
      </a>
      <a href="/breweries/<%= @brewery.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_brewery/<%= @brewery.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div>
  <a></a>
</div>

<div class="row" padding-top="60px">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Beer name</th>
        <th>Style</th>
        <th>ABV (%)</th>
      </tr>

</table>
</div>
</div>
