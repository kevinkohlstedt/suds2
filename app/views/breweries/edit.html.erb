<!-- Validation failure messages -->
<% if @brewery.errors.any? %>
  <% @brewery.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Brewery #<%= @brewery.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_brewery/<%= @brewery.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for brewery_name -->
      <div class="form-group">
        <label for="brewery_name" class="control-label">
          Brewery name
        </label>

        <input type="text" id="brewery_name" name="brewery_name" placeholder="Brewery name" class="form-control" value="<%= @brewery.brewery_name %>">
      </div>

      <!-- Label and input for brewery_location -->
      <div class="form-group">
        <label for="brewery_location" class="control-label">
          Brewery location
        </label>

        <input type="text" id="brewery_location" name="brewery_location" placeholder="Brewery location" class="form-control" value="<%= @brewery.brewery_location %>">
      </div>

      <button class="btn btn-warning">
        Update Brewery
      </button>
      or
      <a href="/breweries/<%= @brewery.id %>">Cancel</a>
    </form>
  </div>
</div>
