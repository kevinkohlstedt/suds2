<div class="page-header">
  <h1>
    Breweries
    <a href="/breweries/new" class="btn btn-lg btn-success">New Brewery</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Brewery location</th>
        <th>Brewery name</th>
        <th>Actions</th>
      </tr>

      <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.brewery_location %></td>
        <td><%= brewery.brewery_name %></td>
        <td>
          <a href="/breweries/<%= brewery.id %>" class="btn btn-primary">Show</a>
          <a href="/breweries/<%= brewery.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_brewery/<%= brewery.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
