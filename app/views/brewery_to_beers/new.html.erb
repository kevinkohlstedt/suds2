<!-- Validation failure messages -->
<% if @brewery_to_beer.errors.any? %>
  <% @brewery_to_beer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Brewery To Beer</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_brewery_to_beer" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for beer_id -->
      <div class="form-group">
        <label for="beer_id" class="control-label">
          Beer
        </label>

        <input type="text" id="beer_id" name="beer_id" placeholder="Beer" class="form-control" value="<%= @brewery_to_beer.beer_id %>">
      </div>

      <!-- Label and input for brewery_id -->
      <div class="form-group">
        <label for="brewery_id" class="control-label">
          Brewery
        </label>

        <input type="text" id="brewery_id" name="brewery_id" placeholder="Brewery" class="form-control" value="<%= @brewery_to_beer.brewery_id %>">
      </div>

      <button class="btn btn-success">
        Create Brewery To Beer
      </button>
      or
      <a href="/brewery_to_beers">Cancel</a>
    </form>
  </div>
</div>
